<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agrimitra">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.WeatherShowActivity"></activity>
        <activity android:name=".views.activities.QueryChattingActivity" />
        <activity
            android:name=".views.activities.Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".views.activities.Dashboard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".views.activities.Signup"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" /> <!-- <activity android:name=".Login" /> -->
        <activity
            android:screenOrientation="portrait"
            android:name=".views.activities.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.LocationGetter" />
        <activity android:name=".views.activities.MarketActivity" />
        <activity
            android:name=".views.activities.FeedbackActivity"
            android:label="@string/component_Feedback" />
        <activity
            android:name=".views.activities.SoilHealthActivity"
            android:label="@string/component_Soil" />
        <activity
            android:name=".views.activities.WeatherActivity"
            android:label="@string/component_Weather" />
        <activity
            android:name=".views.activities.QueryActivity"
            android:label="@string/component_Query" />
    </application>

</manifest>